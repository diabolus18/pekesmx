<div class="title"><h3>{l s='Current comments' mod='csblog'}</h3></div>{if $blockcomments|@count > 0}<div class="box-content">	<ul class="unstyled list_tree">	{foreach from=$blockcomments item=comment name=comment}		<li {if $smarty.foreach.comment.last} class="last"{/if}>			<div class="title_post">				<a href="{$comment['link_post']}"> {$comment['title']|escape:'htmlall':'UTF-8'|truncate:45:'...'} </a>			</div>			<div class="comment_content">							{$comment['content']|escape:'htmlall':'UTF-8'|truncate:100:'...'}			</div>			{if isset($comment['image_post'])}				<div class="comment_image_post"><a href="{$comment['link_post']}"><img src="{$cs_path}{$comment['image_post']}" title="{$comment['name_post']}" alt="{$comment['name_post']}" /></a></div>			{/if}										<div class="comment_date"><span>{$comment['date_add']}</span></div>			<div class="comment_author">				{l s='Write by' mod='csblog'} 				<span class="pluser_name">				{if isset($comment['author_name']) && $comment['author_name']!=""}{$comment['author_name']}{/if}</span>			</div>					</li>	{/foreach}	</ul></div>{else}	<div class="no_item">{l s='There is no comment' mod='csblog'}</div>{/if}