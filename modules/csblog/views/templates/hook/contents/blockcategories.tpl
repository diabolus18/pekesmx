<div class="title"><h3>{l s='Categories' mod='csblog'}</h3></div>{if $cs_blockCategTree.children > 0}	<div class="box-content">		<ul class="unstyled list_tree tree {if $cs_isDhtml}dhtml{/if}">		{foreach from=$cs_blockCategTree.children item=child name=cs_blockCategTree}			{if $smarty.foreach.cs_blockCategTree.last}				{include file="$cs_branche_tpl_path" node=$child last='true'}			{else}				{include file="$cs_branche_tpl_path" node=$child}			{/if}		{/foreach}		</ul>		<script type="text/javascript">		// <![CDATA[			// we hide the tree only if JavaScript is activated			$('div#blockblogcategory_left ul.dhtml').hide();		// ]]>		</script>	</div>{else}	<div class="no_item">{l s='There is no category' mod='csblog'}</div>{/if}