<div class="title"><h3>{l s='Latest Posts' mod='csblog'}</h3></div>{if $lastest_posts|@count > 0}<div class="box-content">	<ul class="unstyled">	{foreach from=$lastest_posts item=post name=lastest_posts}		<li {if $smarty.foreach.lastest_posts.last} class="last"{/if}>			<div class="title_post"> <a href="{$post['link']}" title="{$post['name']}"><span>{$post['name']|escape:'htmlall':'UTF-8'|truncate:55:'...'}</span></a></div>			<span class="post_date_add">{$post['date_add']}</span>			{if $cs_imep_show != 'none'}				{if $post['image'] != ''}					<a href="{$post['link']}" title="{$post['name']}">						<img src="{$cs_path}{$post['image']}" title="{$post['name']}" alt="{$post['name']}" />					</a>				{/if}			{/if}			{if isset($post['description']) && $post['description']!=''}			<div class="post_description">			{$pl_blog_post = $post['description']|strip_tags}			{$pl_blog_post|truncate:$CS_COLP_MAXIMUM}			</div>			{/if}			<div class="block_post_more">				{if $post['author'] != ''}					{assign var=author value="¤"|explode:$post['author']}					{l s='Posted by '}<span class="pluser_name">										{if isset($author[1]) && $author[1]!=""}{$author[1]}{/if}</span>					<span class="opa">&nbsp;|&nbsp;</span>				{/if}					<span class="pl_requie">{$post['count_comment']}</span>					{if $post['count_comment'] > 1}{l s='Comments' mod='csblog'}{/if}					{if $post['count_comment'] <= 1} {l s='Comment' mod='csblog'}{/if}			</div>				</li>	{/foreach}	</ul></div>{else}	<div class="no_item">{l s='There is no lastest post' mod='csblog'}</div>{/if}